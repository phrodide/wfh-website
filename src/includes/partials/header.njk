<div class="container">
   <div class="row align-items-center">
        <div class="col-sm-4 d-flex justify-content-evenly"><button class="btn btn-primary" type="button" onclick="location.href='/DonateLink/'">DONATE</button></div>
        <div class="col-sm-4 d-flex justify-content-evenly"><a class="navbar-brand" href="/"><img src="/img/top-logo.png"></a></div>
        <div class="col-sm-4 d-flex justify-content-evenly"><button class="btn btn-primary" type="button" onclick="location.href='/Register/'">JOIN A TEAM</button></div>
    </div>  
</div>
<nav class="navbar navbar-expand-lg">
  <div class="container">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
        {% set navPages = collections.all | eleventyNavigation %}
        {% macro renderNavListItem(entry, isRoot) -%}
          <li{% if isRoot %} class="nav-item {% if entry.children.length %}dropdown{% endif %}"{% endif %}>
            {%- if entry.children.length -%}
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown">{{ entry.title }}</a>
              <ul class="dropdown-menu">
                {%- for child in entry.children %}{{ renderNavListItem(child, false) }}{% endfor -%}
              </ul>
            {%- else -%}
              <a {% if isRoot %} class="nav-link"{%else%} class="dropdown-item" {% endif %} href="{{ entry.url }}">{{ entry.title }}</a>
            {%- endif -%}
          </li>
        {%- endmacro %}

        <ul class="navbar-nav">
          {%- for entry in navPages %}{{ renderNavListItem(entry, true) }}{%- endfor -%}
        </ul>
    </div>
  </div>
</nav>
